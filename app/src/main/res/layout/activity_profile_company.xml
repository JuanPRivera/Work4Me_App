<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:tag="profile_Applicant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:contentDescription="@string/login_button"
                app:srcCompat="@drawable/arrow" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/login_button"
                app:srcCompat="@drawable/imageuser" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="My profile"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/activeBgPrApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_tab_active"
            tools:srcCompat="@drawable/ic_company_btn_active" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewCompanyNamePr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Company's Name"
                android:textColor="#616161"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextCompanyNamePr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:inputType="none"
                android:textColor="@color/dark_font"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <View
                    android:id="@+id/viewBackCompanyNamePr"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_font" />

                <View
                    android:id="@+id/viewBlueCompanyNamePr"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blue"
                    android:scaleX="0" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewNITPrComp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="T.I.N"
                android:textColor="#616161"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextNITPrComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:inputType="none"
                android:textColor="@color/dark_font"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <View
                    android:id="@+id/viewBackNITPrComp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_font" />

                <View
                    android:id="@+id/viewBlueNITPrComp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blue"
                    android:scaleX="0" />
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewNumberComApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Company's Number"
                android:textColor="#616161"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextNumberComApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:inputType="none"
                android:textColor="@color/dark_font"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <View
                    android:id="@+id/viewBackNumberComApp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_font" />

                <View
                    android:id="@+id/viewBlueNumberComApp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blue"
                    android:scaleX="0" />
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewLRCompApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="L.R. Name"
                android:textColor="#616161"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextLRCompApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:inputType="none"
                android:textColor="@color/dark_font"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <View
                    android:id="@+id/viewBackLRCompApp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_font" />

                <View
                    android:id="@+id/viewBlueLRCompApp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blue"
                    android:scaleX="0" />
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewLRLastNameCompApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="L.R. Lastname"
                android:textColor="#616161"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextLRLastNameCompApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:inputType="none"
                android:textColor="@color/dark_font"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <View
                    android:id="@+id/viewBackLRLastNameCompApp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_font" />

                <View
                    android:id="@+id/viewBlueLRLastNameCompApp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blue"
                    android:scaleX="0" />
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewEmailPrComp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Company's Email"
                android:textColor="#616161"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextEmailPrComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:inputType="none"
                android:textColor="@color/dark_font"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <View
                    android:id="@+id/viewBackEmailPrComp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_font" />

                <View
                    android:id="@+id/viewBlueEmailPrComp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blue"
                    android:scaleX="0" />
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewNewPassCompProf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="New Password"
                android:textColor="#616161"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextNewPassCompProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="@color/dark_font"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <View
                    android:id="@+id/viewBackNewPassCompProf"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_font" />

                <View
                    android:id="@+id/viewBlueNewPassCompProf"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blue"
                    android:scaleX="0" />
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textViewConfirmNewPassPrComp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Confirmation New Password"
                android:textColor="#616161"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextConfirmNewPassPrComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="@color/dark_font"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="22sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <View
                    android:id="@+id/viewBackConfirmNewPassPrComp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_font" />

                <View
                    android:id="@+id/viewBluePassword"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blue"
                    android:scaleX="0" />
            </FrameLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/UpdateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            android:clickable="true"
            android:contentDescription="Update"
            android:onClick="onTapUpdate"
            app:srcCompat="@drawable/buttonupdate" />
    </LinearLayout>

</ScrollView>